
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>User Registration Form</title>

    <style>
        /* Apply styles to the form container */
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        /* Style labels for better alignment */
        label {
            display: block;
            margin-bottom: 5px;
            color: #333;
        }

        /* Style input fields */
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        /* Style the submit button */
        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            /* Add some hover effect to the submit button */
            input[type="submit"]:hover {
                background-color: #45a049;
            }

        /* Center the form header */
        h2 {
            text-align: center;
        }

        /* Add some space between form elements */
        br {
            line-height: 20px;
        }
    </style>
</head>
<body>
    <h2>User Registration Form</h2>
    <form action="" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name"><br>
        <span class="text-danger">@Html.ValidationMessage("name")</span>
        <br />

        <label for="userid">User ID:</label>
        <input type="text" id="userid" name="userid"><br>
        <span class="text-danger">@Html.ValidationMessage("userid")</span>
        <br>

        <label for="password">Password:</label>
        <input type="text" id="password" name="password"><br>
        <span class="text-danger">@Html.ValidationMessage("password")</span>
        <br>

        <label for="id">ID:</label>
        <input type="text" id="id" name="id"><br>
        <span class="text-danger">@Html.ValidationMessage("id")</span>
        <br>

        <label for="email">Email:</label>
        <input type="text" id="email" name="email"><br>
        <span class="text-danger">@Html.ValidationMessage("email")</span>
        <br>

        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" name="dob"><br>
        <span class="text-danger">@Html.ValidationMessage("dob")</span>
        <br>

        <input type="submit" value="Submit">
    </form>

    @Html.ValidationSummary()
</body>
</html>